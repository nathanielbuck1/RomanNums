<html>
<body>

<p> Welcome to the Rom-eta Stone </p>


<button onclick="RomToNum()">Roman -> Number</button>
<button onclick="NumToRom()">Number -> Roman</button>


<p id="show"></p>

<script>

  var counter = 0;
  var Total = []; 


function RomToNum() {
  var string = prompt("what is your number", "Number");
   var length = string.length;
  var check;
  for (check = 0; string.length > check; check ++){
     
  		if (string.charAt(check) === "M") {
        counter = counter + 1000;
        }
        else if (string.charAt(check) === "D") {
        counter = counter + 500;
        }
        else if (string.charAt(check) === "C") {
        counter = counter + 100;
        }
        else if (string.charAt(check) === "XC") {
        counter = counter + 90;
        }
        else if (string.charAt(check) === "LXXX") {
        counter = counter + 80;
        }
        else if (string.charAt(check) === "LXX") {
        counter = counter + 70;
        }
        else if (string.charAt(check) === "LX") {
        counter = counter + 60;
        }
        else if (string.charAt(check) === "L") {
        counter = counter + 50;
        }
        else if (string.charAt(check) === "XL") {
        counter = counter + 40;
        }
        else if (string.charAt(check) === "XXX") {
        counter = counter + 30;
        }
        else if (string.charAt(check) === "XX") {
        counter = counter + 20;
        }
        else if (string.charAt(check) === "X") {
        counter = counter + 10;
        }
        else if (string.charAt(check) === "IX") {
        counter = counter + 9;
        }
        else if (string.charAt(check) === "VIII") {
        counter = counter + 8;
        }
        else if (string.charAt(check) === "VII") {
        counter = counter + 7;
        }
        else if (string.charAt(check) === "VI") {
        counter = counter + 6;
        }
        else if (string.charAt(check) === "V") {
        counter = counter + 5;
        }
        else if (string.charAt(check) === "IV") {
        counter = counter + 4;
        }
        else if (string.charAt(check) === "III") {
        counter = counter + 3;
        }
        else if (string.charAt(check) === "II") {
        counter = counter + 2;
        }
        else if (string.charAt(check) === "I") {
        counter = counter + 1;
        }
  }
  if (string != null) {
    document.getElementById("show").innerHTML =
    "Your number is " + counter;
  }
  counter = 0;
}


function NumToRom() {
 var num2 = prompt("what is your number", "Number");
  while (num2 > 0) {
  if (num2 >= 1000) {
  Total.push("M");
  num2 = num2 - 1000;
}
  if (num2 >= 500) {
  Total.push("D");
  num2 = num2 - 500;
}
  if (num2 >= 100) {
  Total.push("C");
  num2 = num2 - 100;
}
  if (num2 >= 90) {
  Total.push("XCC");
  num2 = num2 - 90;
}
  if (num2 >= 80) {
  Total.push("LXXX");
  num2 = num2 - 80;
}
  if (num2 >= 70) {
  Total.push("LXX");
  num2 = num2 - 70;
}
  if (num2 >= 60) {
  Total.push("LX");
  num2 = num2 - 60;
}
  if (num2 >= 50) {
  Total.push("L");
  num2 = num2 - 50;
}
  if (num2 >= 40) {
  Total.push("XL");
  num2 = num2 - 40;
}
  if (num2 >= 30) {
  Total.push("XXX");
  num2 = num2 - 30;
}
  if (num2 >= 20) {
  Total.push("XX");
  num2 = num2 - 20;
}
  if (num2 >= 10) {
  Total.push("X");
  num2 = num2 - 10;
}
  if (num2 >= 9) {
  Total.push("IX");
  num2 = num2 - 9;
}
  if (num2 >= 8) {
  Total.push("VIII");
  num2 = num2 - 8;
}
  if (num2 >= 7) {
  Total.push("VII");
  num2 = num2 - 7;
}
  if (num2 >= 6) {
  Total.push("VI");
  num2 = num2 - 6;
}
  if (num2 >= 5) {
  Total.push("V");
  num2 = num2 - 5;
}
  if (num2 >= 4) {
  Total.push("IV");
  num2 = num2 - 4;
}
  if (num2 >= 3) {
  Total.push("III");
  num2 = num2 - 3;
}
  if (num2 >= 2) {
  Total.push("II");
  num2 = num2 - 2;
}
  if (num2 >= 1) {
  Total.push("I");
  num2 = num2 - 1;
}
}
  if (num2 != null) {
    document.getElementById("show").innerHTML =
    "Your number is " + Total.join('');
  }
  Total = [];
}
</script>

